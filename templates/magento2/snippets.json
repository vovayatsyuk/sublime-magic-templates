{
    "/view/adminhtml/ui_component/": [
        { "trigger": "dataProvider", "scope": "text.xml -string.quoted.double.xml", "path": "view/adminhtml/ui_component/dataProvider" }
    ],
    "/view/adminhtml/layout/": [
        { "trigger": "uiComponent", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/adminhtml/layout/uiComponent", "pattern": ".*\\.xml" }
    ],
    "/view/": [
        { "trigger": "block", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/block", "pattern": "layout/.*\\.xml" },
        { "trigger": "css", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/css", "pattern": "layout/.*\\.xml" },
        { "trigger": "head", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/head", "pattern": "layout/.*\\.xml" },
        { "trigger": "referenceBlock", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/referenceBlock", "pattern": "layout/.*\\.xml" },
        { "trigger": "referenceContainer", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/referenceContainer", "pattern": "layout/.*\\.xml" },
        { "trigger": "update", "scope": "text.xml -meta.tag.xml -string.quoted.double.xml", "path": "view/base/layout/update", "pattern": "layout/.*\\.xml" },

        { "trigger": "after", "scope": "meta.tag.xml", "path": "view/base/layout/attributes/after", "pattern": "layout/.*\\.xml" },
        { "trigger": "before", "scope": "meta.tag.xml", "path": "view/base/layout/attributes/before", "pattern": "layout/.*\\.xml" },
        { "trigger": "helper", "scope": "meta.tag.xml", "path": "view/base/layout/attributes/helper", "pattern": "layout/.*\\.xml" }
    ],
    "/etc/": [
        { "trigger": "preference", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/preference", "pattern": "di\\.xml" },
        { "trigger": "type\tplugin", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/type.plugin", "pattern": "di\\.xml" },
        { "trigger": "type\targuments", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/type.arguments", "pattern": "di\\.xml" },
        { "trigger": "virtualType", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/virtualType", "pattern": "di\\.xml" },
        { "trigger": "virtualType\tdataProvider", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/virtualType.dataProvider", "pattern": "di\\.xml" },
        { "trigger": "virtualType\tgridFilters", "scope": "text.xml -string.quoted.double.xml", "path": "etc/di.xml/virtualType.gridFilters", "pattern": "di\\.xml" }
    ],
    "/": [
        { "trigger": ".classname\tMT", "scope": "source.php", "path": "/php/snippets/classname" },
        { "trigger": ".namespace\tMT", "scope": "source.php", "path": "/php/snippets/namespace" }
    ]
}
